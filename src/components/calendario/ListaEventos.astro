---

<div class="bg-white rounded-lg shadow-md overflow-hidden">
  <div class="p-4 border-b">
    <div class="flex justify-between items-center">
      <h2 class="text-xl font-semibold text-gray-800">Eventos Programados</h2>
      <div class="flex gap-2">
        <select class="rounded-lg border-gray-300 text-sm">
          <option>Todos los tipos</option>
          <option>Reuniones</option>
          <option>Capacitaciones</option>
        </select>
      </div>
    </div>
  </div>

  <div class="p-4">
    <div class="space-y-4">
      {eventos.map(evento => (
        <div class="border rounded-lg p-4 hover:shadow-md transition-shadow">
          <div class="flex justify-between items-start">
            <div>
              <h3 class="font-medium text-lg text-gray-900">{evento.titulo}</h3>
              <div class="mt-2 space-y-1">
                <p class="text-sm text-gray-600 flex items-center gap-2">
                  <span></span> {evento.fecha} | {evento.hora} ({evento.duracion})
                </p>
                <p class="text-sm text-gray-600 flex items-center gap-2">
                  <span></span> {evento.lugar}
                </p>
                <p class="text-sm text-gray-600 flex items-center gap-2">
                  <span></span> {evento.participantes.join(', ')}
                </p>
              </div>
            </div>
            <div class="flex flex-col items-end gap-2">
              <span class={`px-2 py-1 text-xs font-semibold rounded-full
                ${evento.tipo === 'reunion' ? 'bg-blue-100 text-blue-800' : 
                'bg-green-100 text-green-800'}`}>
                {evento.tipo}
              </span>
              <div class="flex gap-2 mt-2">
                <button class="text-blue-600 hover:text-blue-800 text-sm">Editar</button>
                <button class="text-red-600 hover:text-red-800 text-sm">Cancelar</button>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</div>